<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
         <vbox>
         <relief>RIDGE</relief>         
         <bd>6</bd>
                <label>
                        <text>"Spindle Speed:"</text>
                        <font>("Helvetica",20)</font>
                </label>
                <bar>
                        <halpin>"spindle-speed"</halpin>
                        <max_>3000</max_>
                </bar>
                <label>
                        <text>"Spindle-At-Speed:"</text>
                        <font>("Helvetica",20)</font>
                </label>
                <hbox>
                    <label>
                            <text>"             "</text>
                            <font>("Helvetica",20)</font>
                    </label>
                    <led>
                        <halpin>"spindle-at-speed-led"</halpin> 
                        <size>30</size> 
                        <on_color>"green"</on_color>
                        <off_color>"red"</off_color>
                    </led>
                </hbox>
        </vbox>

        <button>
            <halpin>"clamp-open"</halpin>
            <text>"Разжим цанги"</text>
            <height>4</height>
        </button>
        <hbox>
            <label>
              <text>"Цанга зажата"</text>
              <font>("Helvetica",14)</font>
            </label>
            <led>
              <halpin>"clamp-led"</halpin>
              <size>25</size>
              <on_color>"green"</on_color>
              <off_color>"red"</off_color>
            </led>
        </hbox>
        <button>
            <halpin>"clamp-close"</halpin>
            <text>"Зажим цанги"</text>
            <height>4</height>
        </button>


</pyvcp>
